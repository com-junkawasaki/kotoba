{
  config: {
    name: "Test Site",
    description: "A simple test site built with Kotoba handlers",
    base_url: "https://example.com",
  },

  handlers: {
    "GET /": {
      handler_type: "Template",
      template: "<h1>Hello from Kotoba!</h1><p>This page was generated entirely from Jsonnet.</p>"
    },
    
    "GET /api/test": {
      handler_type: "Json",
      data: {
        message: "Hello from Kotoba API!",
        timestamp: std.toString(std.time()),
        success: true
      }
    }
  },

  deployment: {
    provider: "github_pages",
    branch: "gh-pages"
  }
}
