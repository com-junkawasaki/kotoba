{
    "dsl": "1.0.0",
    "namespace": "examples",
    "name": "http-workflow",
    "version": "1.0.0",
    "description": "A workflow that makes HTTP calls",
    "do": [
        {
            "type": "set",
            "name": "set-api-config",
            "variables": {
                "api_base_url": "https://httpbin.org",
                "user_id": "12345"
            }
        },
        {
            "type": "callHttp",
            "name": "get-user-data",
            "method": "GET",
            "endpoint": "${api_base_url}/json",
            "headers": {
                "Accept": "application/json",
                "X-User-ID": "${user_id}"
            },
            "output": {
                "as": "api_response"
            }
        },
        {
            "type": "set",
            "name": "process-response",
            "variables": {
                "processed_data": "${api_response.slideshow}"
            }
        },
        {
            "type": "callHttp",
            "name": "post-result",
            "method": "POST",
            "endpoint": "${api_base_url}/post",
            "body": {
                "user_id": "${user_id}",
                "data": "${processed_data}",
                "timestamp": "${timestamp}"
            },
            "headers": {
                "Content-Type": "application/json"
            }
        }
    ]
}