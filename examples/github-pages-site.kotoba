    structured_data: {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Kotoba Pages",
      "description": "Build websites with pure Jsonnet",
      "url": "https://jun784.github.io/kotoba-pages-demo"
    }
  },

  // 📊 アナリティクス設定
  analytics: {
    enabled: true,
    provider: "plausible", // or "google-analytics"
    domain: "jun784.github.io",
    track_events: true,
    exclude_admin: true
  },

  // 🚀 デプロイメント設定
  deployment: {
    provider: "github_pages",
    branch: "gh-pages",
    build_command: "kotoba build github-pages-site.kotoba",
    output_dir: "_site",
    optimization: {
      minify_html: true,
      compress_assets: true,
      generate_sitemap: true,
      generate_feed: true,
      optimize_images: false // まだ実装されていない
    }
  },

  // 🔧 ビルド設定
  build: {
    source_dir: ".",
    output_dir: "_site",
    clean_output: true,
    parallel_processing: true,
    cache_enabled: true,
    error_on_missing_assets: false
  },

  // 📱 PWA設定（将来の拡張用）
  pwa: {
    enabled: false, // 今は無効
    name: "Kotoba Pages Demo",
    short_name: "KotobaDemo",
    description: "Kotoba Pages demonstration site",
