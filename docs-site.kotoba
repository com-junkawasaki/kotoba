{
  // GitHub Pagesサイト定義（Kotoba言語）
  config: {
    type: "github_pages_site",
    name: "Kotoba Documentation",
    description: "A comprehensive graph processing platform featuring complete Jsonnet implementation",
    base_url: "https://jun784.github.io/kotoba",
    theme: "modern",
    github_repo: "jun784/kotoba",
  },

  // ページ定義
  pages: [
    {
      name: "index",
      title: "Kotoba - Graph Processing System",
      description: "Complete Jsonnet implementation with GraphQL and distributed execution",
      template: "home",
      content: {
        hero: {
          title: "Explore the World of Graphs Through Words",
          subtitle: "Kotoba - A comprehensive graph processing platform",
          features: [
            "Complete Jsonnet Implementation",
            "DPO Graph Rewriting",
            "ISO GQL Compliant",
            "MVCC + Merkle Persistence"
          ]
        },
        sections: [
          {
            title: "Key Features",
            items: [
              {
                icon: "⚡",
                title: "High Performance",
                description: "Rust-native architecture with 95% test coverage"
              },
              {
                icon: "🔧",
                title: "Complete Jsonnet",
                description: "Full Jsonnet implementation supporting all features"
              },
              {
                icon: "📊",
                title: "Graph Processing",
                description: "Advanced graph operations with DPO rewriting"
              }
            ]
          }
        ]
      }
    },
    {
      name: "docs",
      title: "Documentation",
      description: "Comprehensive documentation and guides",
      template: "docs",
      sections: [
        {
          title: "Getting Started",
          pages: ["installation", "quickstart", "concepts"]
        },
        {
          title: "Architecture",
          pages: ["architecture", "performance", "process-network"]
        },
        {
          title: "Development",
          pages: ["nix-development", "api-reference", "contributing"]
        }
      ]
    },
    {
      name: "examples",
      title: "Examples",
      description: "Code examples and use cases",
      template: "examples",
      examples: [
        {
          title: "Basic Jsonnet",
          language: "jsonnet",
          code: '{\n  name: "Kotoba",\n  version: "1.0.0",\n  features: ["jsonnet", "graph", "gql"]\n}',
          description: "Simple Jsonnet object definition"
        },
        {
          title: "Graph Query",
          language: "gql",
          code: "MATCH (p:Person) WHERE p.age > 25 RETURN p.name",
          description: "ISO GQL query example"
        }
      ]
    }
  ],

  // コンポーネント定義（KotobaScript拡張）
  components: [
    {
      name: "HeroSection",
      type: "react_component",
      props: ["title", "subtitle", "features"],
      template: "hero.html.jsonnet"
    },
    {
      name: "FeatureCard",
      type: "react_component",
      props: ["icon", "title", "description"],
      template: "feature-card.html.jsonnet"
    }
  ],

  // ナビゲーション
  navigation: {
    main: [
      { label: "Home", href: "/" },
      { label: "Docs", href: "/docs" },
      { label: "Examples", href: "/examples" },
      { label: "GitHub", href: "https://github.com/jun784/kotoba" }
    ],
    footer: [
      { label: "License", href: "/license" },
      { label: "Contributing", href: "/contributing" }
    ]
  },

  // デプロイメント設定
  deployment: {
    provider: "github_pages",
    branch: "gh-pages",
    cname: "kotoba.jun784.dev",
    build_command: "kotoba build docs-site.kotoba",
    output_dir: "_site"
  },

  // ビルド設定
  build: {
    markdown: {
      extensions: ["table", "fenced_code", "autolink", "strikethrough"],
      highlight_languages: ["rust", "jsonnet", "javascript", "bash"]
    },
    optimization: {
      minify_html: true,
      compress_assets: true,
      generate_sitemap: true
    }
  }
}
